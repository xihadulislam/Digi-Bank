<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="logInVM" type="com.digibank.app.modules.login.data.viewmodel.LogInVM"/>
    </data>
    <LinearLayout android:id="@+id/linearLogIn"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_40pxv"
        android:paddingEnd="@dimen/_27pxh"
        android:paddingStart="@dimen/_27pxh"
        android:paddingTop="@dimen/_40pxv" style="@style/groupStyle{&quot;name&quot;:&quot;gray_100&quot;}">
        <ImageView android:id="@+id/imageGlobeOne"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_80pxh"
            android:layout_width="@dimen/_80pxh"
            android:scaleType="fitXY" android:src="@drawable/img_globe"
            tools:ignore="ContentDescription" tools:src="@drawable/img_globe"/>
        <TextView android:ellipsize="end" android:id="@+id/txtHello"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_25pxh"
            android:singleLine="true"
            android:text="@{logInVM.logInModel.txtHello}"
            style="@style/txtOverpassbold46" tools:text="@string/lbl_hello"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtEnteryourdetail"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_9pxh"
            android:singleLine="true"
            android:text="@{logInVM.logInModel.txtEnteryourdetail}"
            style="@style/txtOverpassregular16_1" tools:text="@string/msg_enter_your_detail"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPhoneoremail"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_9pxh"
            android:singleLine="true"
            android:text="@{logInVM.logInModel.txtPhoneoremail}"
            style="@style/txtOverpassregular16_2" tools:text="@string/lbl_phone_or_email"/>
        <EditText
            android:background="@drawable/rectangle_border_name_primarycontainer"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_arrowdown"
            android:ellipsize="end" android:fontFamily="@font/overpass"
            android:hint="@string/lbl_email" android:id="@+id/etPhone"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:paddingBottom="@dimen/_24pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_25pxh"
            android:paddingTop="@dimen/_24pxv" android:singleLine="true"
            android:text="@={logInVM.logInModel.etPhoneValue}"
            android:textColor="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
            android:textColorHint="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
            android:textFontWeight="400"
            android:textSize="@dimen/_18pxh" android:textStyle="normal" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end" android:id="@+id/txtPassword"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_9pxh"
            android:singleLine="true"
            android:text="@{logInVM.logInModel.txtPassword}"
            style="@style/txtOverpassregular16_2" tools:text="@string/lbl_password"/>
        <EditText
            android:background="@drawable/rectangle_border_name_primarycontainer"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_lock"
            android:ellipsize="end" android:fontFamily="@font/overpass"
            android:hint="@string/lbl_password"
            android:id="@+id/etPassword" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:paddingBottom="@dimen/_24pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_25pxh"
            android:paddingTop="@dimen/_24pxv" android:singleLine="true"
            android:text="@={logInVM.logInModel.etPasswordValue}"
            android:textColor="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
            android:textColorHint="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
            android:textFontWeight="400"
            android:textSize="@dimen/_18pxh" android:textStyle="normal" tools:ignore="Autofill"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
            android:ellipsize="end" android:fontFamily="@font/overpass"
            android:gravity="center" android:id="@+id/btnSignIn"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_72pxv"
            android:layout_width="@dimen/_360pxh"
            android:paddingBottom="@dimen/_22pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_22pxv" android:singleLine="true"
            android:text="@string/lbl_sign_in"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;}"
            android:textFontWeight="600"
            android:textSize="@dimen/_18pxh" android:textStyle="bold" tools:text="@string/lbl_sign_in"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_border_name_primary"
            android:drawablePadding="@dimen/_18pxh"
            android:drawableStart="@drawable/img_google"
            android:ellipsize="end" android:fontFamily="@font/overpass"
            android:gravity="center" android:id="@+id/btnSignInWith"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_72pxv"
            android:layout_width="@dimen/_360pxh"
            android:paddingBottom="@dimen/_25pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_25pxv" android:singleLine="true"
            android:text="@string/msg_sign_in_with_google"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
            android:textFontWeight="600"
            android:textSize="@dimen/_16pxh" android:textStyle="bold" tools:text="@string/msg_sign_in_with_google"/>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearRowhaveaccount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView android:ellipsize="end" android:gravity="top"
                android:id="@+id/txtHaveaccount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:singleLine="true"
                android:text="@{logInVM.logInModel.txtHaveaccount}"
                style="@style/txtOverpassregular20" tools:text="@string/lbl_have_account"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSignup"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:singleLine="true"
                android:text="@{logInVM.logInModel.txtSignup}"
                style="@style/txtOverpassromansemibold20" tools:text="@string/lbl_sign_up"/>
        </LinearLayout>
    </LinearLayout>
</layout>
