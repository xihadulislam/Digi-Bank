<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="bankToBankOneVM" type="com.digibank.app.modules.banktobankone.data.viewmodel.BankToBankOneVM"/>
    </data>
    <LinearLayout android:id="@+id/linearColumnlocationOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_34pxv"
        android:paddingTop="@dimen/_34pxv" style="@style/groupStyle{&quot;name&quot;:&quot;gray_100&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton
                android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:id="@+id/btnLocationOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_8pxh"
                android:paddingVertical="@dimen/_8pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_location_onprimary" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtBanktobank"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{bankToBankOneVM.bankToBankOneModel.txtBanktobank}"
                style="@style/txtOverpassbold20" tools:text="@string/lbl_bank_to_bank2"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearBanktobankone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_26pxv"
            android:paddingEnd="@dimen/_21pxh"
            android:paddingStart="@dimen/_21pxh" android:paddingTop="@dimen/_26pxv">
            <TextView android:ellipsize="end"
                android:id="@+id/txtSelectbanktosen"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_14pxh"
                android:singleLine="true"
                android:text="@{bankToBankOneVM.bankToBankOneModel.txtSelectbanktosen}"
                style="@style/txtOverpassbold26" tools:text="@string/msg_select_bank_to_send"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSelectaaccount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_8pxh"
                android:singleLine="true"
                android:text="@{bankToBankOneVM.bankToBankOneModel.txtSelectaaccount}"
                style="@style/txtOverpassregular14" tools:text="@string/msg_select_a_account"/>
            <FrameLayout android:id="@+id/frameStackjonathan"
                android:layout_height="@dimen/_200pxv" android:layout_width="@dimen/_366pxh">
                <LinearLayout android:id="@+id/linearWalletmastercar"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_22pxv"
                    android:paddingEnd="@dimen/_24pxh"
                    android:paddingStart="@dimen/_24pxh"
                    android:paddingTop="@dimen/_22pxv" style="@style/groupStyle">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtJonathan"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{bankToBankOneVM.bankToBankOneModel.txtJonathan}"
                        style="@style/txtOverpassbold12" tools:text="@string/msg_jonathan_anderson"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtText"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.03"
                        android:singleLine="true"
                        android:text="@{bankToBankOneVM.bankToBankOneModel.txtText}"
                        style="@style/txtOverpasssemibold18" tools:text="@string/msg_1222_3443_9881_1222"/>
                    <LinearLayout android:id="@+id/linearRowbalance"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearLayout"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="vertical">
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtBalance"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:letterSpacing="0.01"
                                android:singleLine="true"
                                android:text="@{bankToBankOneVM.bankToBankOneModel.txtBalance}"
                                style="@style/txtOverpasssemibold8" tools:text="@string/lbl_balance"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtPrice"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:letterSpacing="0.02"
                                android:singleLine="true"
                                android:text="@{bankToBankOneVM.bankToBankOneModel.txtPrice}"
                                style="@style/txtOverpasssemibold12" tools:text="@string/lbl_31_250"/>
                        </LinearLayout>
                        <ImageView android:id="@+id/imageVolumeOne"
                            android:layout_gravity="bottom"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_width="@dimen/_20pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_volume"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_volume"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_onprimary_radius_20"
                    android:id="@+id/btnCheckmarkOne"
                    android:layout_gravity="bottom|center"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_width="@dimen/_40pxh"
                    android:paddingHorizontal="@dimen/_13pxh"
                    android:paddingVertical="@dimen/_13pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_checkmark_primary" tools:ignore="ContentDescription"/>
            </FrameLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearWalletmastercar1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_22pxv"
                android:paddingEnd="@dimen/_24pxh"
                android:paddingStart="@dimen/_24pxh"
                android:paddingTop="@dimen/_22pxv" style="@style/groupStyle_1">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtJonathan1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.02"
                    android:singleLine="true"
                    android:text="@{bankToBankOneVM.bankToBankOneModel.txtJonathan1}"
                    style="@style/txtOverpassbold12" tools:text="@string/msg_jonathan_anderson"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTextOne"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.03"
                    android:singleLine="true"
                    android:text="@{bankToBankOneVM.bankToBankOneModel.txtTextOne}"
                    style="@style/txtOverpasssemibold18" tools:text="@string/msg_1222_3443_0881_1222"/>
                <LinearLayout android:id="@+id/linearRowbalanceOne"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearLayout1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtBalanceOne"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{bankToBankOneVM.bankToBankOneModel.txtBalanceOne}"
                            style="@style/txtOverpasssemibold8" tools:text="@string/lbl_balance"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPrice1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.02"
                            android:singleLine="true"
                            android:text="@{bankToBankOneVM.bankToBankOneModel.txtPrice1}"
                            style="@style/txtOverpasssemibold12" tools:text="@string/lbl_31_250"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/imageVolumeThree"
                        android:layout_gravity="bottom"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_volume"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_volume"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
            android:ellipsize="end" android:fontFamily="@font/overpass"
            android:gravity="center" android:id="@+id/btnContinue"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_58pxv"
            android:layout_width="@dimen/_320pxh"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="@dimen/_11pxh"
            android:paddingBottom="@dimen/_13pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_13pxv" android:singleLine="true"
            android:text="@string/lbl_continue2"
            android:textAllCaps="true"
            android:textColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;}"
            android:textFontWeight="700"
            android:textSize="@dimen/_20pxh" android:textStyle="bold" tools:text="@string/lbl_continue2"/>
    </LinearLayout>
</layout>
