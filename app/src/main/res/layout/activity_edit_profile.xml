<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="editProfileVM" type="com.digibank.app.modules.editprofile.data.viewmodel.EditProfileVM"/>
    </data>
    <LinearLayout android:id="@+id/linearEditProfile"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_100&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton
                android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:id="@+id/btnLocationOne"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_8pxh"
                android:paddingVertical="@dimen/_8pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_location_onprimary" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtEditprofile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtEditprofile}"
                style="@style/txtOverpassbold20" tools:text="@string/lbl_edit_profile"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumntrashOne"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_34pxv"
            android:paddingEnd="@dimen/_27pxh"
            android:paddingStart="@dimen/_27pxh" android:paddingTop="@dimen/_34pxv">
            <FrameLayout android:id="@+id/frameProfile"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_139pxv" android:layout_width="@dimen/_139pxh">
                <ImageView android:id="@+id/imageCircleimage"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_139pxh"
                    android:layout_width="@dimen/_139pxh"
                    android:scaleType="centerCrop" circular="@{true}"
                    imageRes="@{@drawable/img_ellipse107}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse107"/>
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_primary_border_name_gray_50_radius_15"
                    android:id="@+id/btnTrashOne"
                    android:layout_gravity="bottom|end"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_width="@dimen/_30pxh"
                    android:paddingHorizontal="@dimen/_9pxh"
                    android:paddingVertical="@dimen/_9pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_trash" tools:ignore="ContentDescription"/>
            </FrameLayout>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtSuzanejobs"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_11pxh"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtSuzanejobs}"
                style="@style/txtOverpassextrabold40_1" tools:text="@string/lbl_suzane_jobs"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtEditprofileOne"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_8pxh"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtEditprofileOne}"
                style="@style/txtOverpassregular14" tools:text="@string/lbl_edit_profile"/>
            <TextView android:ellipsize="end" android:id="@+id/txtName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_9pxh"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtName}"
                style="@style/txtOverpassregular16_1" tools:text="@string/lbl_name"/>
            <EditText
                android:background="@drawable/rectangle_border_name_primarycontainer"
                android:ellipsize="end"
                android:fontFamily="@font/overpass"
                android:hint="@string/lbl_suzane_jobs"
                android:id="@+id/etName" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_21pxv"
                android:singleLine="true"
                android:text="@={editProfileVM.editProfileModel.etNameValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_17pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <TextView android:ellipsize="end" android:id="@+id/txtEmail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_9pxh"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtEmail}"
                style="@style/txtOverpassregular16_1" tools:text="@string/lbl_email"/>
            <EditText
                android:background="@drawable/rectangle_border_name_primarycontainer"
                android:ellipsize="end"
                android:fontFamily="@font/overpass"
                android:hint="@string/lbl_user_gmail_com"
                android:id="@+id/etEmail" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_21pxv"
                android:singleLine="true"
                android:text="@={editProfileVM.editProfileModel.etEmailValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_17pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <TextView android:ellipsize="end" android:id="@+id/txtPhone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_9pxh"
                android:singleLine="true"
                android:text="@{editProfileVM.editProfileModel.txtPhone}"
                style="@style/txtOverpassregular16_1" tools:text="@string/lbl_phone"/>
            <EditText
                android:background="@drawable/rectangle_border_name_primarycontainer"
                android:ellipsize="end"
                android:fontFamily="@font/overpass"
                android:hint="@string/lbl_1234567890"
                android:id="@+id/etPhone" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_21pxv"
                android:singleLine="true"
                android:text="@={editProfileVM.editProfileModel.etPhoneValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_17pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:ellipsize="end"
                android:fontFamily="@font/overpass"
                android:gravity="center" android:id="@+id/btnSave"
                android:layout_height="@dimen/_58pxv"
                android:layout_width="@dimen/_359pxh"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/_11pxh"
                android:paddingBottom="@dimen/_13pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_13pxv"
                android:singleLine="true"
                android:text="@string/lbl_save"
                android:textAllCaps="true"
                android:textColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;}"
                android:textFontWeight="700"
                android:textSize="@dimen/_20pxh"
                android:textStyle="bold" tools:text="@string/lbl_save"/>
        </LinearLayout>
    </LinearLayout>
</layout>
